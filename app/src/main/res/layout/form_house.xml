<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.cardview.widget.CardView style="@style/CardViewDefault">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <TextView
                style="@style/TextViewDisplayForm"
                android:text="@string/description"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_title_advertisement"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecursoAun"
                    android:hint="Titulo Del Anuncio"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_description"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecursos"
                    android:hint="Descripcion"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_floors"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecuros"
                    android:hint="Pisos"
                    android:inputType="number" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_rooms"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecursos"
                    android:hint="Cuartos"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_bathRooms"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecursos"
                    android:hint="BaÃ±os"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_area"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecursos"
                    android:hint="Area en mts 2"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutDefault"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_parking"
                    style="@style/EditTextDefault"
                    android:drawableStart="NoTenemosRecursos"
                    android:hint="Parqueo"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>