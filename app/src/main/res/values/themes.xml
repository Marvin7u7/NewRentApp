<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey_100</item>
        <item name="colorOnPrimary">@color/matte_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/matte_black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/grey_slate</item> <!-- Used as hint for EditTexts and Secondary Text -->
        <item name="colorContainer">@color/polished_white</item>   <!-- Used as a background in fragments and activities -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- NoActionBar application theme. -->
    <style name="Theme.RentApp.NoActionBar" parent="Theme.RentApp">

    </style>
    <!-- ActionBar Title-->

</resources>